{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",          // ⬅️ change this
    "moduleResolution": "NodeNext",// ⬅️ keep this

    "isolatedModules": true,
    "strict": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": ["src"]
}